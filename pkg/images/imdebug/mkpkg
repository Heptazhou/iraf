# Make the IMDEBUG image test/examine package.

$call	relink
$exit

update:
	$call	relink
	$call	install
	;

relink:
	$update	libpkg.a
	$omake	x_imdebug.x
	$link	x_imdebug.o libpkg.a -o xx_imdebug.e
	;

install:
	$move	xx_imdebug.e bin$x_imdebug.e
	;

libpkg.a:
	cube.x		<imhdr.h> <printf.h>
	dump.x		<ctype.h> <imhdr.h>
	gsubras.x	<imhdr.h> <mach.h> <printf.h>
	maxmin.x	<imhdr.h> <mach.h>
	mkimage.x	<imhdr.h>
	mktest.x	<imhdr.h> <mach.h>
	;
