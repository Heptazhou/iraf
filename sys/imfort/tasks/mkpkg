# Make the IMFORT debug tasks.

$call	update
$exit

update:
	$call updexe M=args
	$call updexe M=hello
	$call updexe M=imcopy
	$call updexe M=imdel
	$call updexe M=imren
	$call updexe M=keyw
	$call updexe M=minmax
	$call updexe M=mkim
	$call updexe M=pcube
	$call updexe M=phead
	$call updexe M=planck
	$call updexe M=readim
	;

updexe:
	$omake	$(M).f
	$ifolder ($(M).e, $(M).o)
	    $xc -h $(M).o -limfort -lsys -lvops -los
	$endif
	;
